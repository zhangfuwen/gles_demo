{
  "version": 3,
  "configurePresets": [
    {
      "name": "Android",
      "displayName": "Android",
      "description": "Sets Ninja generator, build and install directory",
      "generator": "Ninja",
      "binaryDir": "build-android",
      "environment": {
        "NDK_HOME": "$penv{ANDROID_NDK_HOME}",
        "PATH": "$env{HOME}/ninja/bin:$penv{PATH}"
      },
      "toolchainFile": "${ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
        "CMAKE_MAKE_PROGRAM": "ninja",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_NATIVE_API_LEVEL": "29",
        "ANDROID_TOOLCHAIN": "clang"
      }
    },
    {
      "name": "Linux",
      "displayName": "Linux",
      "description": "Sets Ninja generator, build and install directory",
      "generator": "Ninja",
      "binaryDir": "build-linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_MAKE_PROGRAM": "/usr/bin/ninja"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Android",
      "displayName": "Android",
      "description": "Sets Ninja generator, build and install directory",
      "generator": "Ninja",
      "configurePreset": "Android",
      "binaryDir": "build-android",
      "toolchainFile": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
        "CMAKE_MAKE_PROGRAM": "ninja",
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_NATIVE_API_LEVEL": "29",
        "ANDROID_TOOLCHAIN": "clang"
      }
    },
    {
      "name": "Linux",
      "displayName": "Linux",
      "description": "Linux Env",
      "generator": "Ninja",
      "configurePreset": "Linux",
      "binaryDir": "build-android",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
